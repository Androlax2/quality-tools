{
  "scripts": {
    "php-mess-detector": "bin/phpmd . text phpmd.xml --exclude vendor/",
    "php-sniff": "bin/phpcs --standard=phpcs.xml --ignore=vendor,node_modules,bin,.idea .",
    "phpcbf": "bin/phpcbf --standard=phpcs.xml --ignore=vendor,node_modules,bin,.idea ."
  },
  "config": {
    "bin-dir": "bin"
  },
  "require": {
    "php": "^7.4.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "phpmd/phpmd" : "@stable",
    "slevomat/coding-standard": "^6.4"
  }
}
